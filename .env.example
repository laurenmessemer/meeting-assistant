# ============================================================
# HUBSPOT API
# ============================================================

HUBSPOT_API_KEY=your_hubspot_private_app_token

# ============================================================
# GOOGLE OAUTH (DESKTOP APP FLOW)
# These values come from your client_secret.json file.
# You will NOT paste that entire JSON here â€” only these fields.
# ============================================================

GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Path to your OAuth JSON file (if you're loading it directly)
GOOGLE_CLIENT_SECRET_FILE=client_secret.json

# Optional: Token storage file (auto-generated)
GOOGLE_TOKEN_FILE=token.json

# Google OAuth Scopes
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.readonly,https://www.googleapis.com/auth/drive.readonly,https://www.googleapis.com/auth/gmail.readonly

# ============================================================
# ZOOM SERVER-TO-SERVER OAUTH
# ============================================================

ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# ============================================================
# DATABASE / MEMORY LAYERS
# (Use PostgreSQL or SQLite for MVP)
# ============================================================

DATABASE_URL=postgresql://username:password@localhost:5432/meeting_agent

# ============================================================
# LLM PROVIDER (Groq, Gemini, OpenAI, etc.)
# Using free-tier options for interview MVP
# ============================================================

LLM_PROVIDER=gemini
LLM_API_KEY=your_llm_api_key

# ============================================================
# FASTAPI SETTINGS (Optional)
# ============================================================

APP_ENV=development
APP_DEBUG=True
PORT=8000

# Application Name
APP_NAME=Meeting Assistant
LOG_LEVEL=INFO
